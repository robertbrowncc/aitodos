{
	"info": {
		"_postman_id": "random-uuid",
		"name": "AI Todos API",
		"description": "Collection of all API endpoints for the AI Todos application",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Todos",
			"item": [
				{
					"name": "List Todos",
					"request": {
						"method": "GET",
						"url": "{{baseUrl}}/api/todos",
						"description": "Get all todos with their associated person"
					}
				},
				{
					"name": "Create Todo",
					"request": {
						"method": "POST",
						"url": "{{baseUrl}}/api/todos",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Sample Todo\",\n    \"url\": \"https://example.com\",\n    \"person_id\": 1,\n    \"completed\": false\n}"
						},
						"description": "Create a new todo item"
					}
				},
				{
					"name": "Update Todo",
					"request": {
						"method": "PATCH",
						"url": "{{baseUrl}}/api/todos/:id",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Updated Todo\",\n    \"url\": \"https://example.com\",\n    \"person_id\": 1,\n    \"completed\": true\n}"
						},
						"description": "Update an existing todo"
					}
				},
				{
					"name": "Delete Todo",
					"request": {
						"method": "DELETE",
						"url": "{{baseUrl}}/api/todos/:id",
						"description": "Delete a todo item"
					}
				}
			]
		},
